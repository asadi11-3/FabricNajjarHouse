@model NajjarFabricHouse.Dto.ForgotPasswordDto
@{
    Layout = null;
}
<div class="container">
    <h2>Forgot Password</h2>
    <p>Enter your registered email to reset your password.</p>
    <form asp-action="ForgotPassword" method="post">
        <input asp-for="Email" id="email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <button type="submit" class="btn btn-primary">Check Your Email</button>
    </form>
    <div class="footer">
        <h5>New here? <a asp-action="AccountPerson" asp-controller="Account">Sign Up</a></h5>
        <h5>Already have an account? <a asp-action="AccountPerson" asp-controller="Account">Sign In</a></h5>
        <p style="color:red">@TempData["Message"]</p>
        @if (TempData["Token"] != null && TempData["Email"]!=null)
        {
            <a asp-action="ShowResetPasswordPage" asp-controller="Account" asp-route-email="@TempData["Email"]" asp-route-token="@TempData["Token"]" class="btn btn-primary">
                Reset Password
            </a>
        }
    </div>
</div>



