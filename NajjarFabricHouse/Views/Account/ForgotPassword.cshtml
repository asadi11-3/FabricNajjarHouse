        }

        .container input {
            background-color: #eee;
            border: none;
            margin: 10px 0;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 8px;
            width: 100%;
            outline: none;
        }

        .container button {
            background-color: #512da8;
